<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error-box">
    <h2 class="error-num">
      <%= @book.errors.count %>
      <% if @book.errors.count == 1 %> error <% else %> errors <% end %> prohibited this book from being saved:
    </h2>
    <% @book.errors.full_messages.each do |message| %>
      <div class="paragraph">ãƒ»<%= message %></div>
    <% end %>
  </div>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
  <p>
  <%= f.submit "Update Book" %>
  </p>

  <div class="operation">
  <span class="each-op">
    <%= link_to "Show", book_path(@book.id) %>
  </span>
  <span class="each-op">|</span>
  <span class="each-op">
    <%= link_to "Back", books_path %>
  </span>
</div>

<% end %>
